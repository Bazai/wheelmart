<h1>Все марки</h1>

<table>
  <thead>
    <tr>
      <th>Наименование</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @marks.each do |mark| %>
      <tr>
        <td><%= mark.name %></td>
        <td><%= link_to 'Показать', mark %></td>
        <td><%= link_to 'Редактировать', edit_mark_path(mark) %></td>
        <td><%= link_to 'Удалить', mark, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить марку', new_mark_path %>
